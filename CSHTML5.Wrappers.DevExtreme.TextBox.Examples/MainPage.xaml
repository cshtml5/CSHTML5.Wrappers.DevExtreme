<Page
    x:Class="CSHTML5.Wrappers.DevExtreme.TextBox.Examples.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:TextBox="clr-namespace:DevExtreme_TextBox.DevExpress.ui;assembly=CSHTML5.Wrappers.DevExtreme.TextBox"
    mc:Ignorable="d"

    xmlns:viewmodels="clr-namespace:CSHTML5.Wrappers.DevExtreme.TextBox.Examples">

    <Page.DataContext>
        <viewmodels:MyViewModel />
    </Page.DataContext>
    
    <Canvas>
        <Button x:Name="GetValueButton" Content="Get Value" FontSize="14" Click="GetValue_Click" Canvas.Left="20" Canvas.Top="0"></Button>
        <TextBlock Text="Text Box With Default Data, Placeholder, and Clear Button" x:Name="TextBlock1" Canvas.Left="20" Canvas.Top="30"/>
        <TextBox:dxTextBox x:Name="TextBox1" Canvas.Left="20" Canvas.Top="60" Width="300"/>

        <TextBlock Text="TextBox With Sample Telephone Mask" x:Name="TextBlock2" Canvas.Left="20" Canvas.Top="130"/>
        <TextBox:dxTextBox x:Name="TextBox2" Canvas.Left="20" Canvas.Top="160"/>

        <TextBlock Text="TextBox With Sample Canadian Social Insurance Mask" x:Name="TextBlock3" Canvas.Left="20" Canvas.Top="230"/>
        <TextBox:dxTextBox x:Name="TextBox3" Canvas.Left="20" Canvas.Top="260"/>

        <TextBlock Text="TextBox With Sample Postal Code and ZIP" x:Name="TextBlock4" Canvas.Left="20" Canvas.Top="330"/>
        <TextBox:dxTextBox x:Name="TextBox4" Canvas.Left="20" Canvas.Top="360"/>
        
        <TextBlock Text="TextBox With Password Mode" x:Name="TextBlock5" Canvas.Left="20" Canvas.Top="430"/>
        <TextBox:dxTextBox x:Name="TextBox5" Canvas.Left="20" Canvas.Top="460"/>

        <TextBlock Text="Text Box With Default Value From ViewModel Property" x:Name="TextBlock6" Canvas.Left="20" Canvas.Top="530"/>
        <TextBox:dxTextBox x:Name="TextBox6" Canvas.Left="20" Canvas.Top="560" Width="300"/>

        <TextBlock Text="Text Box 7 Interacting With Another Text Box 7b" x:Name="TextBlock7" Canvas.Left="20" Canvas.Top="630"/>
        <TextBox:dxTextBox KeyUp="TextBox7_KeyUp" x:Name="TextBox7" Canvas.Left="20" Canvas.Top="660" Width="300"/>
        <TextBox:dxTextBox  x:Name="TextBox7b" Canvas.Left="20" Canvas.Top="700" Width="300"/>

        <TextBlock Text="Another Text Box 8 Interacting With Another Text Box 8b" x:Name="TextBlock8" Canvas.Left="20" Canvas.Top="750"/>
        <TextBox:dxTextBox KeyUp="TextBox8_KeyUp" x:Name="TextBox8" Canvas.Left="20" Canvas.Top="760" Width="300"/>
        <TextBox:dxTextBox  x:Name="TextBox8b" Canvas.Left="20" Canvas.Top="800" Width="300"/>
    </Canvas>
</Page>
